<%- include('partials/header') -%>
    <h1>Add Article</h1>
    <form class="add-article" action="/articles" method="POST">
        <div class="add-elem-div">
            <input class="title-article" type="text" name="title" placeholder="Title">
        </div>
        <div class="add-elem-div">
            <input class="author-article" type="text" name="author" placeholder="Author's Name">
        </div>
        <div class="add-elem-div">
            <textarea name="description" rows="4" cols="50" placeholder="Description"></textarea>
        </div>
        <div class="add-elem-div">
            <input class="tags-article" type="text" name="tags" placeholder="TAGS (like HTML, CSS, Javascript)">
        </div>
        <div class="add-elem-div"> 
            <input type="submit" value="Add Article">
            <a class="button clear-anchor" >Clear</a>
        </div>
    </form>
    
<%- include('partials/footer') -%>