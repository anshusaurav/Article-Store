<%- include('partials/header') -%>
<form class="edit-action-form" action="/articles/<%= article.id %>/comments/<%= comment.id %>/edit" method="POST"> 
    <textarea class="comment-area" name="content" > <%=comment.content %>
    </textarea>
    <div class="comment-flex-col-2">
        <input type="text" class="comment-author-input" name="author" placeholder="Reader's name" value="<%= comment.author %>" readonly/>
        <input id="comment-btn" type="submit" value="Save Comment">
    </div>
</form>

<%- include('partials/footer') -%>